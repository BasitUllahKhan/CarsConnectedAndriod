<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarConnected" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--for button.-->
    <style name="primary_button" parent="Widget.AppCompat.Button">
       <item name="android:background">@drawable/main_gradients</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:radius">50dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--for text view using as a heading-->
    <style name="bold_textview_inter" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--for textview using as a description-->
    <style name="regular_textview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_700</item>
    </style>
    <!--textview for gradient look-->
    <style name="gradient_tv" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/gradient_textview</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!--textview of small text-->
    <style name="normal_tv" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/gradient_textview</item>
    </style>

    <!--for transparent button-->
    <style name="transparentbutton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/transparent_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@drawable/gradient_textview</item>
        <item name="android:textSize">14dp</item>


    </style>


</resources>