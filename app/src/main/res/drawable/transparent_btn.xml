<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="@color/red1"
                android:startColor="@color/red2" />
            <corners android:radius="50dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <size
                android:width="287dp"
                android:height="56dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/white" />
            <corners android:radius="50dp" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>